public class Solution {
    public void sortLetters(char[] chars) {
        if(chars == null || chars.length <= 1){
            return;
        }
        int lower = 0;
        int upper = chars.length - 1;
        while(lower < upper){
            while(lower < upper && isLowerCase(chars[lower])){
                lower ++;
            }
            while(lower < upper && !isLowerCase(chars[upper])){
                upper --;
            }
            if(lower < upper){
                char temp = chars[lower];
                chars[lower] = chars[upper];
                chars[upper] = temp;
                
                lower ++;
                upper --;
            }
        }
    }
    
    private boolean isLowerCase(char c){
        if(c >= 'a' && c <= 'z'){
            return true;
        }
        return false;
    }
}
