public class Solution {
    /**
     * @param S: A list of integers
     * @return: An integer
     */
    public int triangleCount(int S[]) {
        // write your code here
        Arrays.sort(S);
        int ans = 0;
        for(int i = 0; i < S.length; i ++){
            int left = 0, right = i - 1;
            while(left < right){
                if(S[left] + S[right] > S[i]){
                    ans += right - left;
                    right --;
                }else{
                    left ++;
                }
            }
        }
        return ans;
    }
}


